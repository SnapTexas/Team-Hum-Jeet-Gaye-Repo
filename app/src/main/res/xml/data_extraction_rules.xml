<?xml version="1.0" encoding="utf-8"?>
<!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="encrypted_prefs.xml"/>
        <exclude domain="database" path="health_tracker_db"/>
        <exclude domain="file" path="medical_records/"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow device-to-device transfer for non-sensitive data -->
        <include domain="sharedpref" path="user_preferences.xml"/>
        <exclude domain="sharedpref" path="encrypted_prefs.xml"/>
        <exclude domain="database" path="health_tracker_db"/>
    </device-transfer>
</data-extraction-rules>
